			</component>
			<component id="ipBox" height="100%" width="80%" anchor="top right" visible="false">
				<component height="50%" width="100%" alpha="0.5" anchor="top">
					<text id="ipDigit0" size="50%" anchor="center center" offset="-70% 0%"></text>
					<text id="ipDigit1" size="50%" anchor="center center" offset="-60% 0%"></text>
