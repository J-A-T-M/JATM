				</component>
			</component>
			<component id="numPlayerBox" height="100%" width="80%" anchor="top right">
				<component height="100%" width="50%" anchor="top left">
					<component height="50%" width="100%" alpha="0.5" anchor="top">
						<text id="numLocal" size="50%" anchor="center center">2</text>
					</component>
					<component height="50%" width="100%" alpha="0.75" anchor="bottom">
						<text size="50%" anchor="center center">Local Players</text>
					</component>
				</component>
				<component height="100%" width="50%" offset="50% 0%" anchor="top left">
					<component height="50%" width="100%" alpha="0.5" anchor="top">
						<text id="numRemote" size="50%" anchor="center center">2</text>
					</component>
					<component height="50%" width="100%" alpha="0.75" anchor="bottom">
						<text size="50%" anchor="center center">Remote Players</text>
					</component>
				</component>
